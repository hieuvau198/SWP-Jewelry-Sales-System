@page
@model RazorTest.Pages.IndexModel
@{
    ViewData["Title"] = "Warranty List";
}

<h2>Warranty</h2>

<style>
    /* Table styles */
    table {
        width: 100%;
        border-collapse: collapse; /* Ensures borders between cells are merged */
        margin-top: 20px; /* Adds spacing above the table */
    }

    th, td {
        border: 1px solid black; /* Adds border to cells and header cells */
        padding: 8px; /* Adds space inside cells */
        text-align: left; /* Aligns text to the left inside cells */
    }

    th {
        background-color: #f9f9f9; /* Light grey background for header cells */
    }
</style>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Warranty Id</th>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Start Date</th>
            <th>Expire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody border="1">
        @foreach (var warranty in Model.Warranties)
        {
            <tr>
                <td>@warranty.WarrantyId</td>
                <td><strong>@warranty.ProductId</strong></td>
                <td>@warranty.ProductName</td>
                <td>@warranty.StartDate.ToShortDateString()</td>
                <td>@warranty.ExpireDate.ToShortDateString()</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@warranty.WarrantyId">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@warranty.WarrantyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="./Create">Create New Warraty</a>