@page
@model RazorTest.Pages.CustomerListModel
@{
    ViewData["Title"] = "Customer List";
}

<h2>Customers</h2>

<style>
    /* Table styles */
    table {
        width: 100%;
        border-collapse: collapse; /* Ensures borders between cells are merged */
        margin-top: 20px; /* Adds spacing above the table */
    }
    th, td {
        border: 1px solid black; /* Adds border to cells and header cells */
        padding: 8px; /* Adds space inside cells */
        text-align: left; /* Aligns text to the left inside cells */
    }
    th {
        background-color: #f9f9f9; /* Light grey background for header cells */
    }
</style>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer Id</th>
            <th>Customer Name</th>
            <th>Customer Rank</th>
            <th>Customer Points</th>
            <th>Attend Date</th>
        </tr>
    </thead>
    <tbody border ="1">
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td><strong>@customer.CustomerName</strong></td>
                <td>@customer.CustomerRank</td>
                <td>@customer.CustomerPoint</td>
                <td>@customer.AttendDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
