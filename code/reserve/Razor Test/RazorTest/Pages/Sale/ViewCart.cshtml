@page "{currentPage:int?}"
@using RazorTest.Models
@model RazorTest.Pages.Sale.CartModel
@{
}

<h2>Cart Object</h2>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f9f9f9;
    }

    .btn-pink {
        background-color: pink;
        color: white;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }

        .btn-pink:hover {
            background-color: #ff69b4;
        }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
            margin: 0 4px;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
                border: 1px solid #4CAF50;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }
</style>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Product Images</th>
            <th>Product Quantity</th>
            <th>Product Type</th>
            <th>Product Weight</th>
            <th>Product Warranty</th>
            <th>Gem Id</th>
            <th>Gem Weight</th>
            <th>Gold Id</th>
            <th>Gold Weight</th>
            <th>Labor Cost</th>
            <th>Create At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Cart)
        {
            <tr>
                <td><strong>@product.ProductId</strong></td>
                <td>@product.ProductCode</td>
                <td>@product.ProductName</td>
                <td><img src="/ProductImages/@product.ProductImages" width="100px" /></td>
                <td>@product.ProductQuantity</td>
                <td>@product.ProductType</td>
                <td>@product.ProductWeight</td>
                <td>@product.ProductWarranty</td>
                <td>@product.GemId</td>
                <td>@product.GemWeight</td>
                <td>@product.GoldId</td>
                <td>@product.GoldWeight</td>
                <td>@product.LaborCost</td>
                <td>@product.CreatedAt.ToShortDateString()</td>
                <td>
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to remove this product?');">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./Cart" asp-route-currentPage="@(Model.CurrentPage - 1)">&laquo; Prev</a>
    }
    @for (var i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.CurrentPage)
        {
            <a class="active" href="#">@i</a>
        }
        else
        {
            <a asp-page="./Cart" asp-route-currentPage="@i">@i</a>
        }
    }
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./Cart" asp-route-currentPage="@(Model.CurrentPage + 1)">Next &raquo;</a>
    }
</div>

<form method="get" action="/Sale/SaleHomePage">
    <input type="hidden" name="Back" value="/Sale/SaleHomePage" />
    <button type="submit" class="btn-pink">Back to Product List</button>
</form>
