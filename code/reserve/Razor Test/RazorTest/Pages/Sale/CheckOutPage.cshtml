@page
@model RazorTest.Pages.Sale.CheckOutPageModel
@{
}

<h2>Test Invoice</h2>

@if(Model.Invoice!=null)
{
    <p>Invoice ID: @Model.Invoice.InvoiceId</p>
    <p>Invoice Type: @Model.Invoice.InvoiceType</p>
    <p>Customer ID: @Model.Invoice.CustomerId</p>
    <p>User ID: @Model.Invoice.UserId</p>
    <p>Customer Voucher: @Model.Invoice.CustomerVoucher</p>
    <p>Total Price: @Model.Invoice.TotalPrice</p>
    <p>Status: @Model.Invoice.InvoiceStatus</p>
}

@if(Model.InvoiceItems != null)
{
    foreach(var item in Model.InvoiceItems)
    {
        <table>
            <thead>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Discount</th>
                <th>Total Price</th>
                <th>After Discount</th>
            </thead>
            <tbody>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>@item.DiscountRate</td>
                <td>@item.TotalPrice</td>
                <td>@item.EndTotalPrice</td>
            </tbody>
        </table>
        
    }
}


<form method="get" action="/Sale/ViewCart">
    <input type="hidden" name="Back" value="/Sale/ViewCart" />
    <button type="submit" class="btn-pink">Back</button>
</form>