@page
@model RazorTest.Pages.ProductListModel
@{
    ViewData["Title"] = "Product List";
}

<h2>Product</h2>

<style>
    /* Table styles */
    table {
        width: 100%;
        border-collapse: collapse; /* Ensures borders between cells are merged */
        margin-top: 20px; /* Adds spacing above the table */
    }

    th, td {
        border: 1px solid black; /* Adds border to cells and header cells */
        padding: 8px; /* Adds space inside cells */
        text-align: left; /* Aligns text to the left inside cells */
    }

    th {
        background-color: #f9f9f9; /* Light grey background for header cells */
    }
</style>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Product Images</th>
            <th>Product Quantity</th>
            <th>Product Type</th>
            <th>Product Weight</th>
            <th>Product Warranty</th>
            <th>Gem Id</th>
            <th>Gem</th>
            <th>Gem Weight</th>
            <th>Gold Id</th>
            <th>Gold</th>
            <th>Gold Weight</th>
            <th>Labor Cost</th>
            <th>Create At</th>
        </tr>
    </thead>
    <tbody border="1">
        @foreach (var product in Model.Products)
        {
            <tr>
                <td><strong>@product.ProductId</strong>
                    <a href="ProductDetail/Edit?Id=@product.ProductId">Edit</a>
                    <a href="ProductDetail/Delete?Id=@product.ProductId">Delete</a>
                </td>
                <td>@product.ProductCode</td>
                <td>@product.ProductName</td>
                <td><img src="/Product Images/@product.ProductImages" width="100%"/></td>
                <td>@product.ProductQuantity</td>
                <td>@product.ProductType</td>
                <td>@product.ProductWeight</td>
                <td>@product.ProductWarranty</td>
                <td>@product.GemId</td>
                <td>@product.Gem</td>
                <td>@product.GemWeight</td>
                <td>@product.GoldId</td>
                <td>@product.Gold</td>
                <td>@product.GoldWeight</td>
                <td>@product.LaborCost</td>
                <td>@product.CreatedAt.ToShortDateString()
                </td>
            </tr>
        }
    </tbody>
</table>
