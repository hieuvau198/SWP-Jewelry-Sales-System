@page
@model RazorTest.Pages.DiscountCRUD.IndexModel
@{
    ViewData["Title"] = "Discount List";
}

<h2>Discounts</h2>

<style>
    /* Table styles */
    table {
        width: 100%;
        border-collapse: collapse; /* Ensures borders between cells are merged */
        margin-top: 20px; /* Adds spacing above the table */
    }

    th, td {
        border: 1px solid black; /* Adds border to cells and header cells */
        padding: 8px; /* Adds space inside cells */
        text-align: left; /* Aligns text to the left inside cells */
    }

    th {
        background-color: #f9f9f9; /* Light grey background for header cells */
    }
</style>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Discount Id</th>
            <th>Discount Name</th>
            <th>Order Type</th>
            <th>Product Type</th>
            <th>Public Date</th>
            <th>Expire Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discount in Model.Discounts)
        {
            <tr>
                <td>@discount.DiscountId</td>
                <td><strong>@discount.DiscountName</strong></td>
                <td>@discount.OrderType</td>
                <td>@discount.ProductType</td>
                <td>@discount.PublicDate.ToShortDateString()</td>
                <td>@discount.ExpireDate.ToShortDateString()</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@discount.DiscountId">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@discount.DiscountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="/Create">Create New Discount</a>