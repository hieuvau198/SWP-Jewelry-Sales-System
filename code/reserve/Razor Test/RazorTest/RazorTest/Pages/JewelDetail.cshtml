@page
@model RazorTest.Pages.JewelListModel
@{
    ViewData["Title"] = "Jewel List";
}

<h2>Jewel</h2>

<style>
    /* Table styles */
    table {
        width: 100%;
        border-collapse: collapse; /* Ensures borders between cells are merged */
        margin-top: 20px; /* Adds spacing above the table */
    }

    th, td {
        border: 1px solid black; /* Adds border to cells and header cells */
        padding: 8px; /* Adds space inside cells */
        text-align: left; /* Aligns text to the left inside cells */
    }

    th {
        background-color: #f9f9f9; /* Light grey background for header cells */
    }
</style>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Jewel Id</th>
            <th>Jewel Name</th>
            <th>Is Complete</th>
        </tr>
    </thead>
    <tbody border="1">
        @foreach (var jewel in Model.Jewels)
        {
            <tr>
                <td>@jewel.Id</td>
                <td><strong>@jewel.Name</strong></td>
                <td>@jewel.IsComplete</td>
            </tr>
        }
    </tbody>
</table>
