@page
@model RazorTest.Pages.CustomerCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Customer - RazorTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom styles -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
            color: #b8860b; /* Set the text color */
        }

        .create-container {
            margin-top: 5rem;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 1200px; /* Increased width */
            max-width: 100%;
            margin: auto;
        }

        .card-header {
            background-color: #fff;
            border-bottom: none;
            padding: 1.5rem 1.5rem 0;
        }

            .card-header h3 {
                margin-bottom: 0;
                color: #b8860b;
                font-weight: 600;
            }

        .card-body {
            padding: 1.5rem;
        }

        .form-group label {
            font-weight: 600;
            color: #b8860b; /* Set the label text color */
        }

        .form-control {
            color: #b8860b; /* Set the input text color */
        }

        .btn-primary {
            background-color: #b8860b;
            border-color: #b8860b;
        }

            .btn-primary:hover {
                background-color: #b8860b;
                border-color: #b8860b;
            }

        .card-footer {
            background-color: #fff;
            border-top: none;
            padding: 1rem 1.5rem;
        }

            .card-footer a {
                background-color: #b8860b; /* Yellow background */
                color: #ffffff; /* White text color */
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
                display: inline-block;
            }

                .card-footer a:hover {
                    background-color: #b8860b; /* Darker shade of yellow on hover */
                    color: #ffffff; /* Maintain white text color on hover */
                    text-decoration: none;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Edit Customer</h1>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Customer.CustomerId" />
                    <div class="form-group">
                        <label asp-for="Customer.CustomerName" class="control-label"></label>
                        <input asp-for="Customer.CustomerName" class="form-control" />
                        <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.CustomerRank" class="control-label"></label>
                        <input asp-for="Customer.CustomerRank" class="form-control" />
                        <span asp-validation-for="Customer.CustomerRank" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.CustomerPoint" class="control-label"></label>
                        <input asp-for="Customer.CustomerPoint" class="form-control" />
                        <span asp-validation-for="Customer.CustomerPoint" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.AttendDate" class="control-label"></label>
                        <input asp-for="Customer.AttendDate" class="form-control" />
                        <span asp-validation-for="Customer.AttendDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-page="./CustomerDetail" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (if needed) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
