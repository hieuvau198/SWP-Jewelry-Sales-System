@page
@model RazorTest.Pages.UserCRUD.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
            color: #b8860b; /* Set the text color */
        }

        .create-container {
            margin-top: 5rem;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 1200px; /* Increased width */
            max-width: 100%;
            margin: auto;
        }

        .card-header {
            background-color: #fff;
            border-bottom: none;
            padding: 1.5rem 1.5rem 0;
        }

            .card-header h3 {
                margin-bottom: 0;
                color: #b8860b;
                font-weight: 600;
            }

        .card-body {
            padding: 1.5rem;
        }

        .form-group label {
            font-weight: 600;
            color: #b8860b; /* Set the label text color */
        }

        .form-control {
            color: #b8860b; /* Set the input text color */
        }

        .btn-primary {
            background-color: #b8860b;
            border-color: #b8860b;
        }

            .btn-primary:hover {
                background-color: #b8860b;
                border-color: #b8860b;
            }

        .card-footer {
            background-color: #fff;
            border-top: none;
            padding: 1rem 1.5rem;
        }

            .card-footer a {
                background-color: #b8860b; /* Yellow background */
                color: #ffffff; /* White text color */
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
                display: inline-block;
            }

                .card-footer a:hover {
                    background-color: #a5702b; /* Darker shade of yellow on hover */
                    color: #ffffff; /* Maintain white text color on hover */
                    text-decoration: none;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3>Create User</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="User.UserId" />

                            <div class="form-group">
                                <label for="username">Username</label>
                                <input asp-for="User.Username" class="form-control" id="username" required>
                                <span asp-validation-for="User.Username" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input asp-for="User.Password" class="form-control" id="password" required>
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="fullname">Full Name</label>
                                <input asp-for="User.Fullname" class="form-control" id="fullname">
                                <span asp-validation-for="User.Fullname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input asp-for="User.Email" class="form-control" id="email">
                                <span asp-validation-for="User.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="role">Role</label>
                                <input asp-for="User.Role" class="form-control" id="role">
                                <span asp-validation-for="User.Role" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-page="./UserDetail" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
