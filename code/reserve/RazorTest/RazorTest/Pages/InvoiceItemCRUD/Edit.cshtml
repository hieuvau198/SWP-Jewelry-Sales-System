@page
@model RazorTest.Pages.InvoiceItemCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!-- Custom styles -->
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
        color: #b8860b; /* Set the text color */
    }

    .create-container {
        margin-top: 5rem;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 1200px; /* Increased width */
        max-width: 100%;
        margin: auto;
    }

    .card-header {
        background-color: #fff;
        border-bottom: none;
        padding: 1.5rem 1.5rem 0;
    }

        .card-header h3 {
            margin-bottom: 0;
            color: #b8860b;
            font-weight: 600;
        }

    .card-body {
        padding: 1.5rem;
    }

    .form-group label {
        font-weight: 600;
        color: #b8860b; /* Set the label text color */
    }

    .form-control {
        color: #b8860b; /* Set the input text color */
    }

    .btn-primary {
        background-color: #b8860b;
        border-color: #b8860b;
    }

        .btn-primary:hover {
            background-color: #b8860b;
            border-color: #b8860b;
        }

    .card-footer {
        background-color: #fff;
        border-top: none;
        padding: 1rem 1.5rem;
    }

        .card-footer a {
            background-color: #b8860b; /* Yellow background */
            color: #ffffff; /* White text color */
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            display: inline-block;
        }

            .card-footer a:hover {
                background-color: #b8860b; /* Darker shade of yellow on hover */
                color: #ffffff; /* Maintain white text color on hover */
                text-decoration: none;
            }
</style>

<h1>Edit</h1>

<h4>InvoiceItem</h4>
<hr />
<div class="row create-container">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h3>Edit Invoice Item</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="InvoiceItem.InvoiceItemId" />
                    <input type="hidden" asp-for="InvoiceItem.InvoiceId" />

                    <div class="form-group">
                        <label asp-for="InvoiceItem.InvoiceId" class="control-label"></label>
                        <input asp-for="InvoiceItem.InvoiceId" class="form-control" />
                        <span asp-validation-for="InvoiceItem.InvoiceId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.ProductName" class="control-label"></label>
                        <input asp-for="InvoiceItem.ProductName" class="form-control" />
                        <span asp-validation-for="InvoiceItem.ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.Quantity" class="control-label"></label>
                        <input asp-for="InvoiceItem.Quantity" class="form-control" />
                        <span asp-validation-for="InvoiceItem.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.UnitPrice" class="control-label"></label>
                        <input asp-for="InvoiceItem.UnitPrice" class="form-control" />
                        <span asp-validation-for="InvoiceItem.UnitPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.DiscountId" class="control-label"></label>
                        <input asp-for="InvoiceItem.DiscountId" class="form-control" />
                        <span asp-validation-for="InvoiceItem.DiscountId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.DiscountRate" class="control-label"></label>
                        <input asp-for="InvoiceItem.DiscountRate" class="form-control" />
                        <span asp-validation-for="InvoiceItem.DiscountRate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.TotalPrice" class="control-label"></label>
                        <input asp-for="InvoiceItem.TotalPrice" class="form-control" />
                        <span asp-validation-for="InvoiceItem.TotalPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.EndTotalPrice" class="control-label"></label>
                        <input asp-for="InvoiceItem.EndTotalPrice" class="form-control" />
                        <span asp-validation-for="InvoiceItem.EndTotalPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InvoiceItem.WarrantyId" class="control-label"></label>
                        <input asp-for="InvoiceItem.WarrantyId" class="form-control" />
                        <span asp-validation-for="InvoiceItem.WarrantyId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-page="./InvoiceItemDetail" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
