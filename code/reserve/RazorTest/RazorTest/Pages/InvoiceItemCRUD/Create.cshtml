@page
@model RazorTest.Pages.InvoiceItemCRUD.CreateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create InvoiceItem - RazorTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
            color: #b8860b; /* Set the text color */
        }

        .create-container {
            margin-top: 5rem;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 1200px; /* Increased width */
            max-width: 100%;
            margin: auto;
        }

        .card-header {
            background-color: #fff;
            border-bottom: none;
            padding: 1.5rem 1.5rem 0;
        }

            .card-header h3 {
                margin-bottom: 0;
                color: #b8860b;
                font-weight: 600;
            }

        .card-body {
            padding: 1.5rem;
        }

        .form-group label {
            font-weight: 600;
            color: #b8860b; /* Set the label text color */
        }

        .form-control {
            color: #b8860b; /* Set the input text color */
        }

        .btn-primary {
            background-color: #b8860b;
            border-color: #b8860b;
        }

            .btn-primary:hover {
                background-color: #b8860b;
                border-color: #b8860b;
            }

        .card-footer {
            background-color: #fff;
            border-top: none;
            padding: 1rem 1.5rem;
        }

            .card-footer a {
                background-color: #b8860b; /* Yellow background */
                color: #ffffff; /* White text color */
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
                display: inline-block;
            }

                .card-footer a:hover {
                    background-color: #a5702b; /* Darker shade of yellow on hover */
                    color: #ffffff; /* Maintain white text color on hover */
                    text-decoration: none;
                }
    </style>
</head>
<body>
    <div class="container create-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center">
                        <h3 class="mb-0">Create InvoiceItem</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="InvoiceItem.InvoiceItemId" />
                            <div class="form-group">
                                <label for="invoiceId">Invoice ID</label>
                                <input asp-for="InvoiceItem.InvoiceId" class="form-control" id="invoiceId" required>
                                <span asp-validation-for="InvoiceItem.InvoiceId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="productName">Product Name</label>
                                <input asp-for="InvoiceItem.ProductName" class="form-control" id="productName" required>
                                <span asp-validation-for="InvoiceItem.ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="quantity">Quantity</label>
                                <input asp-for="InvoiceItem.Quantity" class="form-control" id="quantity" required>
                                <span asp-validation-for="InvoiceItem.Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="unitPrice">Unit Price</label>
                                <input asp-for="InvoiceItem.UnitPrice" class="form-control" id="unitPrice" required>
                                <span asp-validation-for="InvoiceItem.UnitPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="discountId">Discount ID</label>
                                <input asp-for="InvoiceItem.DiscountId" class="form-control" id="discountId">
                                <span asp-validation-for="InvoiceItem.DiscountId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="discountRate">Discount Rate</label>
                                <input asp-for="InvoiceItem.DiscountRate" class="form-control" id="discountRate">
                                <span asp-validation-for="InvoiceItem.DiscountRate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="totalPrice">Total Price</label>
                                <input asp-for="InvoiceItem.TotalPrice" class="form-control" id="totalPrice">
                                <span asp-validation-for="InvoiceItem.TotalPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="endTotalPrice">End Total Price</label>
                                <input asp-for="InvoiceItem.EndTotalPrice" class="form-control" id="endTotalPrice">
                                <span asp-validation-for="InvoiceItem.EndTotalPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="warrantyId">Warranty ID</label>
                                <input asp-for="InvoiceItem.WarrantyId" class="form-control" id="warrantyId">
                                <span asp-validation-for="InvoiceItem.WarrantyId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary btn-block">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-page="./InvoiceItemDetail" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
