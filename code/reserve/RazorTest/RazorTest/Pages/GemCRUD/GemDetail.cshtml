@page
@model RazorTest.Pages.GemCRUD.GemListModel
@{
    ViewData["Title"] = "Gem List";
}

<h2 style="text-align: center;">Gems</h2>
<div class="luxury-table-wrapper">
    <table class="luxury-table">
        <thead>
            <tr>
                <th>Gem Id</th>
                <th>Gem Name</th>
                <th>Gem Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gem in Model.Gems)
            {
                <tr>
                    <td>@gem.GemId</td>
                    <td><strong>@gem.GemName</strong></td>
                    <td>@gem.GemPrice</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@gem.GemId" class="btn btn-primary" style="background-color: #b8860b; border-color: #b8860b;">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@gem.GemId" class="btn btn-danger" style="background-color: #dc3545; border-color: #dc3545;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-page="./Create" class="btn btn-primary" style="background-color: #b8860b; border-color: #b8860b;">Create New Gem</a>
