@page
@model RazorTest.Pages.GemCRUD.CreateModel

<h1>Create Gem</h1>

<form method="post">
    <!-- Hidden field for DiscountId -->
    <input asp-for="Gem.GemId" type="hidden" />

    <div class="form-group">
        <label asp-for="Gem.GemName"></label>
        <input asp-for="Gem.GemName" class="form-control" />
        <span asp-validation-for="Gem.GemName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gem.GemPrice"></label>
        <input asp-for="Gem.GemPrice" class="form-control" />
        <span asp-validation-for="Gem.GemPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

