@page
@model RazorTest.Pages.Buy.BuyBackModel
@{
}

<!DOCTYPE html>
<html lang="en">
<!-- partial: Shared/_Head.cshtml -->
@await Html.PartialAsync("Shared/_Head")
<!-- partial -->
<body>
    <div class="container-scroller">
        <!-- partial: Shared/_Sidebar.cshtml -->
        @await Html.PartialAsync("Shared/_Sidebar")
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial: Shared/_Navbar.cshtml -->
            @await Html.PartialAsync("Shared/_Navbar")
            <!-- partial -->
            <div class="main-panel">
                <!-- content-wrapper begins -->
                <div class="content-wrapper">
                    <div class="card">
                        <div class="card-body">
                            <!-- EDIT HERE ONLY -->
                            @if (Model.BuyInvoiceObject != null)
                            {
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Invoice Id</label>
                                    <div class="col-sm-9">
                                        <input style="width:100%;" type="text" class="form-control" value="@Model.BuyInvoiceObject.InvoiceId" readonly>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Customer</label>
                                    <div class="col-sm-9">
                                        <input style="width:100%;" type="text" class="form-control" value="@Model.BuyInvoiceObject.CustomerName" readonly>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Sale Staff</label>
                                    <div class="col-sm-9">
                                        <input style="width:100%;" type="text" class="form-control" value="@Model.BuyInvoiceObject.UserFullname" readonly>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Total</label>
                                    <div class="col-sm-9">
                                        <input style="width:100%;" type="text" class="form-control" value="@String.Format("{0:N0} VND", Model.BuyInvoiceObject.EndTotalPrice)" readonly>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Date</label>
                                    <div class="col-sm-9">
                                        <input style="width:100%;" type="text" class="form-control" value="@Model.BuyInvoiceObject.InvoiceDate" readonly>
                                    </div>

                                </div>
                                <div class="text-center">
                                    <h2>Purchased Products</h2>
                                </div>
                                <div class="row">
                                    <table class="table table-hover text-center">
                                        <thead>
                                            <tr>
                                                <th class="col-xl-2">Product Name</th>
                                                <th class="col-xl-1">Quantity</th>
                                                <th class="col-xl-2">Original Unit Price</th>
                                                <th class="col-xl-3">Sell Price</th>
                                                <th class="col-xl-2">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.BuyInvoiceItemList)
                                            {
                                                <tr>
                                                    <td>@item.ProductName</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@String.Format("{0:N0} VND", item.UnitPrice)</td>
                                                    <td>@String.Format("{0:N0} VND", item.EndTotalPrice / item.Quantity)</td>
                                                    <td>
                                                        <form method="post" asp-page-handler="BuyItem">
                                                            <input type="hidden" id="invoiceItemId" name="invoiceItemId" value="@item.InvoiceItemId" />
                                                            <button type="submit" class="btn btn-outline-warning btn-fw">Request Buy Order</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            

                            <div style="margin:15px;" class="text-center">
                                <a asp-page="./Processing" class="btn btn-outline-secondary btn-fw">Back</a>
                            </div>
                            <!-- EDIT HERE END -->
                        </div>

                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial: Shared/_Footer.cshtml -->
                @await Html.PartialAsync("Shared/_Footer")
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- partial: Shared/_Source.cshtml -->
    @await Html.PartialAsync("Shared/_Source")
    <!-- partial -->
</body>
</html>