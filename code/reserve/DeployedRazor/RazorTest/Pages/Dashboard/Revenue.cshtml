@page
@model RazorTest.Pages.Dashboard.RevenueModel
@{
    ViewData["Title"] = "Charts";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<style>
    .chart-box {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .box {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 20px;
        background-color: #fff;
    }

    .nav-tabs {
        border-bottom: none;
    }

        .nav-tabs .nav-link {
            border-radius: 5px;
        }

            .nav-tabs .nav-link.active {
                background-color: #007bff;
                color: black;
            }

    .row {
        align-items: center;
    }

    .info-card {
        padding: 20px;
        color: #fff;
        border-radius: 10px;
        margin-bottom: 20px;
        text-align: center;
        /*  height: 150px; */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .info-card.bg-blue {
            background-color: #0096ff;
        }

        .info-card.bg-purple {
            background-color: #6a1b9a;
        }

        .info-card.bg-green {
            background-color: #43a047;
        }

        .info-card.bg-red {
            background-color: #e53935;
        }
</style>


<div class="container mt-4">
    <div class="row">
        <!-- Charts Section -->
        <div class="col-md-8 col-sm-8">
            <div class="box">
                <div>
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#chart1">Chart 1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#chart2">Chart 2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#chart3">Chart 3</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#chart4">Chart 4</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#chart5">Chart 5</a>
                        </li>
                    </ul>
                </div>
                <!-- Tab panes -->
                <div class="tab-content col-md-12">
                    <div class="tab-pane container active" id="chart1">
                        <div class="chart-box">
                            <canvas id="myChart1"></canvas>
                        </div>
                    </div>
                    <div class="tab-pane container fade" id="chart2">
                        <div class="chart-box">
                            <canvas id="myChart2"></canvas>
                        </div>
                    </div>
                    <div class="tab-pane container fade" id="chart3">
                        <div class="chart-box">
                            <canvas id="myChart3"></canvas>
                        </div>
                    </div>
                    <div class="tab-pane container fade" id="chart4">
                        <div class="chart-box">
                            <canvas id="myChart4"></canvas>
                        </div>
                    </div>
                    <div class="tab-pane container fade" id="chart5">
                        <div class="chart-box">
                            <canvas id="myChart5"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Info Cards Section -->
        <div class="col-md-4 col-sm-4">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <div class="info-card bg-blue">
                        <h6 class="card-title">Total Sales</h6>
                        <p class="card-text" id="totalSales">@Model.TotalSales.ToString("N1")</p>
                        @* <p class="card-text"><small class="text-white">+54.9%</small></p> *@
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="info-card bg-purple">
                        <h6 class="card-title">Total Purchases</h6>
                        <p class="card-text" id="totalPurchases">@Model.TotalPurchases.ToString("N1")</p>
                        @* <p class="card-text"><small class="text-white">62.7%</small></p> *@
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="info-card bg-green">
                        <h6 class="card-title">Total Invoices</h6>
                        <p class="card-text" id="totalInvoices">@Model.TotalPurchases.ToString("N1")</p>
                        @* <p class="card-text"><small class="text-white">72.1%</small></p> *@
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="info-card bg-red">
                        <h6 class="card-title">Best Staff</h6>
                        <p class="card-text" id="bestStaff">@Model.BestStaff</p>
                        @*<p class="card-text"><small class="text-white">+175.5%</small></p> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const monthlySales = @Html.Raw(Model.MonthlySalesJson);
        const monthlyPurchases = @Html.Raw(Model.MonthlyPurchasesJson);
        const topStaffSales = @Html.Raw(Model.TopStaffSalesJson);
        const bestStaffMonthly = @Html.Raw(Model.BestStaffMonthlyJson);
        const yearlySalesCount = @Html.Raw(ViewData["YearlySalesCount"]);
        const yearlyPurchasesCount = @Html.Raw(ViewData["YearlyPurchasesCount"]);
        const totalSales = monthlySales.reduce((acc, item) => acc + item.total, 0);
        const totalPurchases = monthlyPurchases.reduce((acc, item) => acc + item.total, 0);

        const labels = monthlySales.map(item => item.month);

        const dataSales = monthlySales.map(item => item.total);
        const dataPurchases = monthlyPurchases.map(item => item.total);

        const staffLabels = topStaffSales.map(item => item.staffName);
        const staffDataSales = topStaffSales.map(item => item.totalSales);

        const bestStaffLabels = bestStaffMonthly.map(item => item.month);
        const bestStaffNames = bestStaffMonthly.map(item => item.staffName);
        const bestStaffSales = bestStaffMonthly.map(item => item.totalSales);


        // Bar Chart (myChart)
        const ctx = document.getElementById('myChart1').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Total Sales',
                    data: dataSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)'
                },
                {
                    label: 'Total Purchases',
                    data: dataPurchases,
                    borderWidth: 1,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        text: 'Total Sale and Buy per Month',
                        font: {
                            size: 25
                        }
                    }
                }
            }
        });

        // Doughnut Chart (myChart2)
        const ctx2 = document.getElementById('myChart2').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Total Sales', 'Total Purchases'],
                datasets: [{
                    data: [yearlySalesCount, yearlyPurchasesCount],
                    backgroundColor: ['rgba(54, 162, 235, 0.2)', 'rgba(255, 99, 132, 0.2)'],
                    borderColor: ['rgba(54, 162, 235, 5)', 'rgba(255, 99, 132, 5)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    },
                    title: {
                        display: true,
                        text: 'Total Invoice',
                        font: {
                            size: 25
                        }
                    }
                }
            }
        });

        // Pie Chart (myChart3)
        const ctx3 = document.getElementById('myChart3').getContext('2d');
        new Chart(ctx3, {
            type: 'pie',
            data: {
                labels: ['Total Sales', 'Total Purchases'],
                datasets: [{
                    data: [totalSales, totalPurchases],
                    backgroundColor: ['rgba(54, 162, 235, 0.2)', 'rgba(255, 99, 132, 0.2)'],
                    borderColor: ['rgba(54, 162, 235, 5)', 'rgba(255, 99, 132, 5)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    },
                    title: {
                        display: true,
                        text: 'Total Sales and Purchases per Year',
                        font: {
                            size: 25
                        }
                    }
                }
            }
        });

        // Horizontal Bar Chart (myChart4)
        const ctx4 = document.getElementById('myChart4').getContext('2d');
        new Chart(ctx4, {
            type: 'bar',
            data: {
                labels: staffLabels,
                datasets: [{
                    label: 'Total Sales by Staff',
                    data: staffDataSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)'
                }]
            },
            options: {
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        text: 'Top Employees by Sales',
                        font: {
                            size: 25
                        }
                    }
                }

            }
        });

        // Best Staff of the Month Chart (myChart5)
        const ctx5 = document.getElementById('myChart5').getContext('2d');
        new Chart(ctx5, {
            type: 'bar',
            data: {
                labels: bestStaffLabels,
                datasets: [{
                    label: 'Best Employee of the Month',
                    data: bestStaffSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(153, 102, 255, 0.2)',
                    borderColor: 'rgba(153, 102, 255, 1)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        text: 'Best Staff of the Month with Total Sales',
                        font: {
                            size: 25
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return `${context.dataset.label}: ${context.formattedValue} (${bestStaffNames[context.dataIndex]})`;
                            }
                        }
                    }
                }
            }
        });
    });
</script> 