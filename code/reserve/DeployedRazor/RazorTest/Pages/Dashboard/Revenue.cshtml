@page
@model RazorTest.Pages.Dashboard.RevenueModel
@{
}
<!DOCTYPE html>
<html lang="en">
<!-- partial: Shared/_Head.cshtml -->
@await Html.PartialAsync("Shared/_Head")
<!-- partial -->
<body>
    <div class="container-scroller">
        <!-- partial: Shared/_Sidebar.cshtml -->
        @await Html.PartialAsync("Shared/_Sidebar")
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial: Shared/_Navbar.cshtml -->
            @await Html.PartialAsync("Shared/_Navbar")
            <!-- partial -->
            <div class="main-panel">
                <!-- content-wrapper begins -->
                <div class="content-wrapper">
                    <!-- EDIT HERE ONLY -->
                    <div class="row">

                        <div class="col-sm-4 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h5 id="card-title-1">Incvoice</h5>
                                    <div class="row">
                                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                                <h3 id="card-value-1" class="mb-0">@Model.TotalInvoices</h3>
                                            </div>
                                            <h6 id="card-desc-1" class="text-muted font-weight-normal">Total Invoices</h6>
                                        </div>
                                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                            <i id="card-icon-1" class="icon-lg mdi mdi-file-multiple text-primary ml-auto"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h5 id="card-title-2">Sales</h5>
                                    <div class="row">
                                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                                <h3 id="card-value-2" class="mb-0">@(Model.TotalSales.ToString("#,##0")) đ</h3>
                                            </div>
                                            <h6 id="card-desc-2" class="text-muted font-weight-normal">Total Sales has been Sell</h6>
                                        </div>
                                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                            <i id="card-icon-2" class="icon-lg mdi mdi-basket-unfill text-success ml-auto"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h5 id="card-title-3">Buy</h5>
                                    <div class="row">
                                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                                <h3 id="card-value-3" class="mb-0">@String.Format("{0:N0}", @Model.TotalPurchases) đ</h3>
                                            </div>
                                            <h6 id="card-desc-3" class="text-muted font-weight-normal">Total Sales has been Buy</h6>
                                        </div>
                                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                            <i id="card-icon-3" class="icon-lg mdi mdi-basket-fill text-danger ml-auto"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Charts Section -->
                        <div class="col-8 grid-margin stretch-card">
                            
                            <div class="card">                                
                                <div class="card-body text-center">                                    
                                    <ul class="nav nav-tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" data-bs-toggle="tab" href="#chart1">Total Sale And Buy</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-bs-toggle="tab" href="#chart4">Top Staffs</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-bs-toggle="tab" href="#chart5">Best Staffs of Month</a>
                                        </li>
                                    </ul>
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div class="tab-pane container active" id="chart1">
                                            <div class="text-center">
                                                <h4 class="card-title">Total Sale and Buy per Month</h4>
                                                <canvas id="myChart1"></canvas>
                                            </div>
                                        </div>
                                        <div class="tab-pane container fade" id="chart4">
                                            <div class="text-center">
                                                <h4 class="card-title">Top Employees by Sales</h4>
                                                <canvas id="myChart4"></canvas>
                                            </div>
                                        </div>
                                        <div class="tab-pane container fade" id="chart5">
                                            <div class="text-center">
                                                <h4 class="card-title">Best Staff of the Month with Total Sales</h4>
                                                <canvas id="myChart5"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-body ">

                                        <ul class="nav nav-tabs">
                                            <li class="nav-item">
                                                <a class="nav-link" data-bs-toggle="tab" href="#chart2">Total Invoice</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-bs-toggle="tab" href="#chart3">Sale & Buy</a>
                                            </li>
                                        </ul>
                                        <!--Chart Pie-->
                                        <div class="tab-content">
                                            <div class="tab-pane container active" id="chart2">
                                                <div class="text-center">
                                                    <h5 class="card-title">Total Invoice</h5>
                                                    <canvas id="myChart2" class="transaction-chart"></canvas>                                                    
                                                </div>
                                            </div>
                                            <div class="tab-pane container fade" id="chart3">
                                                <div class="text-center">
                                                    <h5 class="card-title">Total Sale and Buy This year</h5>
                                                    <canvas id="myChart3" class="transaction-chart"></canvas>
                                                </div>
                                            </div>
                                        </div>
                                        <!--Card-info-->
                                        <div id="card-info-1" class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                                            <div class="text-md-center text-xl-left">
                                                <h6 id="info-title-1" class="mb-1">Invoice Pending</h6>
                                                <p id="info-desc-1" class="text-muted mb-0">Total Invoice Pending</p>
                                            </div>
                                            <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                                                <h6 id="info-value-1" class="font-weight-bold mb-0">@Model.TotalPendingInvoices</h6>
                                            </div>
                                        </div>

                                        <div id="card-info-2" class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                                            <div class="text-md-center text-xl-left">
                                                <h6 id="info-title-2" class="mb-1">Invoice Complete</h6>
                                                <p id="info-desc-2" class="text-muted mb-0">Total Invoice Complete</p>
                                            </div>
                                            <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                                                <h6 id="info-value-2" class="font-weight-bold mb-0">@Model.TotalCompleteInvoices</h6>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- EDIT HERE END -->
                </div>
                <!-- content-wrapper ends -->
                <!-- partial: Shared/_Footer.cshtml -->
                @await Html.PartialAsync("Shared/_Footer")
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- partial: Shared/_Source.cshtml -->
    @await Html.PartialAsync("Shared/_Source")
    <!-- partial -->
    <script src=""></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const chart1Tab = document.querySelector('a[href="#chart1"]');
        const chart2Tab = document.querySelector('a[href="#chart2"]');
        const chart3Tab = document.querySelector('a[href="#chart3"]');
        const chart4Tab = document.querySelector('a[href="#chart4"]');
        const chart5Tab = document.querySelector('a[href="#chart5"]');

        chart1Tab.addEventListener('shown.bs.tab', function () {
            document.getElementById('card-title-1').textContent = 'Incvoice';
            document.getElementById('card-desc-1').textContent = 'Total Invoices';
            document.getElementById('card-value-1').textContent = '@Model.TotalInvoices';
            document.getElementById('card-icon-1').className = 'icon-lg mdi mdi-file-multiple text-primary ml-auto';

            document.getElementById('card-title-2').textContent = 'Sales';
            document.getElementById('card-desc-2').textContent = 'Total Sales has been Sell';
            document.getElementById('card-value-2').textContent = '@String.Format("{0:N0}", @Model.TotalSales) đ';
            document.getElementById('card-icon-2').className = 'icon-lg mdi mdi-basket-unfill text-success ml-auto';

            document.getElementById('card-title-3').textContent = 'Buy';
            document.getElementById('card-desc-3').textContent = 'Total Sales has been Buy';
            document.getElementById('card-value-3').textContent = '@String.Format("{0:N0}", @Model.TotalPurchases)đ';
            document.getElementById('card-icon-3').className = 'icon-lg mdi mdi-basket-fill text-danger ml-auto';
        });


        chart2Tab.addEventListener('shown.bs.tab', function () {
            document.getElementById('info-title-1').textContent = 'Invoice Pending';
            document.getElementById('info-desc-1').textContent = 'Total Invoice Pending';
            document.getElementById('info-value-1').textContent = '@Model.TotalPendingInvoices';

            document.getElementById('info-title-2').textContent = 'Invoice Complete';
            document.getElementById('info-desc-2').textContent = 'Total Invoice Complete';
            document.getElementById('info-value-2').textContent = '@Model.TotalCompleteInvoices';
        });

        chart3Tab.addEventListener('shown.bs.tab', function () {
            document.getElementById('info-title-1').textContent = 'Sale';
            document.getElementById('info-desc-1').textContent = 'Total Sale';
            document.getElementById('info-value-1').textContent = '@String.Format("{0:N0}", @Model.TotalSales) đ';

            document.getElementById('info-title-2').textContent = 'Buy';
            document.getElementById('info-desc-2').textContent = 'Total Purchase';
            document.getElementById('info-value-2').textContent = '@String.Format("{0:N0}", @Model.TotalPurchases) đ';
        });

        chart4Tab.addEventListener('shown.bs.tab', function () {
            document.getElementById('card-title-1').textContent = 'Best Staff';
            document.getElementById('card-desc-1').textContent = 'Staff Name';
            document.getElementById('card-value-1').textContent = '@Model.BestStaff';
            document.getElementById('card-icon-1').className = 'icon-lg mdi mdi-account-box text-info ml-auto';

            document.getElementById('card-title-2').textContent = 'Total Sale';
            document.getElementById('card-desc-2').textContent = 'Total Sale by @Model.BestStaffName';
            document.getElementById('card-value-2').textContent = '@String.Format("{0:N0}", @Model.HighestSalesAmount) đ';
            document.getElementById('card-icon-2').className = 'icon-lg mdi mdi-currency-usd text-success ml-auto';

            document.getElementById('card-title-3').textContent = 'Total Invoice';
            document.getElementById('card-desc-3').textContent = 'Total Invoice create By @Model.BestStaffName';
            document.getElementById('card-value-3').textContent = '@Model.TotalInvoiceByStaff';
            document.getElementById('card-icon-3').className = 'icon-lg mdi mdi-file-multiple text-primary ml-auto';
        });

        chart5Tab.addEventListener('shown.bs.tab', function () {
            document.getElementById('card-title-1').textContent = 'Best Staff Of @Model.CurrentMonthYear';
            document.getElementById('card-desc-1').textContent = 'Staff Name';
            document.getElementById('card-value-1').textContent = '@Model.BestStaffThisMonth';
            document.getElementById('card-icon-1').className = 'icon-lg mdi mdi-account-box text-info ml-auto';

            document.getElementById('card-title-2').textContent = 'Total Sale';
            document.getElementById('card-desc-2').textContent = 'Total Sale by @Model.BestStaffThisMonth at @Model.CurrentMonthYear';
            document.getElementById('card-value-2').textContent = '@String.Format("{0:N0}", @Model.TotalSalesByBestStaffThisMonth) đ';
            document.getElementById('card-icon-2').className = 'icon-lg mdi mdi-currency-usd text-success ml-auto';

            document.getElementById('card-title-3').textContent = 'Total Invoice';
            document.getElementById('card-desc-3').textContent = 'Total Invoice create By @Model.BestStaffThisMonth at @Model.CurrentMonthYear';
            document.getElementById('card-value-3').textContent = '@Model.TotalInvoicesByBestStaffThisMonth';
            document.getElementById('card-icon-3').className = 'icon-lg mdi mdi-file-multiple text-primary ml-auto';
        });
    });
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const monthlySales = @Html.Raw(Model.MonthlySalesJson);
        const monthlyPurchases = @Html.Raw(Model.MonthlyPurchasesJson);
        const topStaffSales = @Html.Raw(Model.TopStaffSalesJson);
        const bestStaffMonthly = @Html.Raw(Model.BestStaffMonthlyJson);
        const yearlySalesCount = @Html.Raw(ViewData["YearlySalesCount"]);
        const yearlyPurchasesCount = @Html.Raw(ViewData["YearlyPurchasesCount"]);
        const totalSales = monthlySales.reduce((acc, item) => acc + item.total, 0);
        const totalPurchases = monthlyPurchases.reduce((acc, item) => acc + item.total, 0);

        const labels = monthlySales.map(item => item.month);

        const dataSales = monthlySales.map(item => item.total);
        const dataPurchases = monthlyPurchases.map(item => item.total);

        const staffLabels = topStaffSales.map(item => item.staffName);
        const staffDataSales = topStaffSales.map(item => item.totalSales);

        const bestStaffLabels = bestStaffMonthly.map(item => item.month);
        const bestStaffNames = bestStaffMonthly.map(item => item.staffName);
        const bestStaffSales = bestStaffMonthly.map(item => item.totalSales);

        // Bar Chart (myChart)
        const ctx = document.getElementById('myChart1').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Total Sales',
                    data: dataSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(54, 162, 235, 2.5)',
                    borderColor: 'rgba(54, 162, 235, 1)'
                },
                {
                    label: 'Total Purchases',
                    data: dataPurchases,
                    borderWidth: 1,
                    backgroundColor: 'rgba(255, 99, 132, 2.5)',
                    borderColor: 'rgba(255, 99, 132, 1)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        // text: 'Total Sale and Buy per Month',
                        font: {
                            size: 25
                        }
                    }
                }
            }
        });

        // Doughnut Chart (myChart2)
        const ctx2 = document.getElementById('myChart2').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Sales', 'Buy'],
                datasets: [{
                    data: [yearlySalesCount, yearlyPurchasesCount],
                    backgroundColor: ['rgba(54, 162, 235, 2.5)', 'rgba(255, 99, 132, 2.5)'],
                    borderColor: ['rgba(54, 162, 235, 5)', 'rgba(255, 99, 132, 5)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    },
                    title: {
                        display: true,
                        // text: 'Total Invoice',
                        font: {
                            size: 25
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                const index = context.dataIndex;
                                const label = context.chart.data.labels[index];
                                const value = context.raw;
                                return `${label}: ${value}`;
                            }
                        }
                    }
                }
            }
        });

        // Pie Chart (myChart3)
        const ctx3 = document.getElementById('myChart3').getContext('2d');
        new Chart(ctx3, {
            type: 'pie',
            data: {
                labels: ['Sale', 'Buy'],
                datasets: [{
                    data: [totalSales, totalPurchases],
                    backgroundColor: ['rgba(54, 162, 235, 2.5)', 'rgba(255, 99, 132, 2.5)'],
                    borderColor: ['rgba(54, 162, 235, 5)', 'rgba(255, 99, 132, 5)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    },
                    title: {
                        display: true,
                        // text: 'Total Sales and Purchases per Year',
                        font: {
                            size: 25
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                const index = context.dataIndex;
                                const label = context.chart.data.labels[index];
                                const value = context.raw;
                                const formattedValue = new Intl.NumberFormat('en-US', {
                                    minimumFractionDigits: 0,
                                    maximumFractionDigits: 0
                                }).format(value);
                                return `${label}: ${formattedValue}`;
                            }
                        }
                    }
                }
            }
        });

        // Horizontal Bar Chart (myChart4)
        const ctx4 = document.getElementById('myChart4').getContext('2d');
        new Chart(ctx4, {
            type: 'bar',
            data: {
                labels: staffLabels,
                datasets: [{
                    label: 'Total Sales by Staff',
                    data: staffDataSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(75, 192, 192, 2.5)',
                    borderColor: 'rgba(75, 192, 192, 1)'
                }]
            },
            options: {
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        // text: 'Top Employees by Sales',
                        font: {
                            size: 25
                        }
                    }
                }

            }
        });

        // Best Staff of the Month Chart (myChart5)
        const ctx5 = document.getElementById('myChart5').getContext('2d');
        new Chart(ctx5, {
            type: 'bar',
            data: {
                labels: bestStaffLabels,
                datasets: [{
                    label: 'Best Employee of the Month',
                    data: bestStaffSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(153, 102, 255, 2.5)',
                    borderColor: 'rgba(153, 102, 255, 1)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        // text: 'Best Staff of the Month with Total Sales',
                        font: {
                            size: 25
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return `${context.dataset.label}: ${context.formattedValue} (${bestStaffNames[context.dataIndex]})`;
                            }
                        }
                    }
                }
            }
        });
    });
</script>
