<script>
    document.addEventListener('DOMContentLoaded', function () {
        const monthlySales = @Html.Raw(Model.MonthlySalesJson);
        const monthlyPurchases = @Html.Raw(Model.MonthlyPurchasesJson);
        const topStaffSales = @Html.Raw(Model.TopStaffSalesJson);
        const bestStaffMonthly = @Html.Raw(Model.BestStaffMonthlyJson);
        const yearlySalesCount = @Html.Raw(ViewData["YearlySalesCount"]);
        const yearlyPurchasesCount = @Html.Raw(ViewData["YearlyPurchasesCount"]);
        const totalSales = monthlySales.reduce((acc, item) => acc + item.total, 0);
        const totalPurchases = monthlyPurchases.reduce((acc, item) => acc + item.total, 0);

        const labels = monthlySales.map(item => item.month);

        const dataSales = monthlySales.map(item => item.total);
        const dataPurchases = monthlyPurchases.map(item => item.total);

        const staffLabels = topStaffSales.map(item => item.staffName);
        const staffDataSales = topStaffSales.map(item => item.totalSales);

        const bestStaffLabels = bestStaffMonthly.map(item => item.month);
        const bestStaffNames = bestStaffMonthly.map(item => item.staffName);
        const bestStaffSales = bestStaffMonthly.map(item => item.totalSales);

        // Bar Chart (myChart)
        const ctx = document.getElementById('myChart1').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Total Sales',
                    data: dataSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(54, 162, 235, 2.5)',
                    borderColor: 'rgba(54, 162, 235, 1)'
                },
                {
                    label: 'Total Purchases',
                    data: dataPurchases,
                    borderWidth: 1,
                    backgroundColor: 'rgba(255, 99, 132, 2.5)',
                    borderColor: 'rgba(255, 99, 132, 1)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        // text: 'Total Sale and Buy per Month',
                        font: {
                            size: 25
                        }
                    }
                }
            }
        });

        // Doughnut Chart (myChart2)
        const ctx2 = document.getElementById('myChart2').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Sales', 'Buy'],
                datasets: [{
                    data: [yearlySalesCount, yearlyPurchasesCount],
                    backgroundColor: ['rgba(54, 162, 235, 2.5)', 'rgba(255, 99, 132, 2.5)'],
                    borderColor: ['rgba(54, 162, 235, 5)', 'rgba(255, 99, 132, 5)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    },
                    title: {
                        display: true,
                        // text: 'Total Invoice',
                        font: {
                            size: 25
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                const index = context.dataIndex;
                                const label = context.chart.data.labels[index];
                                const value = context.raw;
                                return `${label}: ${value}`;
                            }
                        }
                    }
                }
            }
        });

        // Pie Chart (myChart3)
        const ctx3 = document.getElementById('myChart3').getContext('2d');
        new Chart(ctx3, {
            type: 'pie',
            data: {
                labels: ['Sale', 'Buy'],
                datasets: [{
                    data: [totalSales, totalPurchases],
                    backgroundColor: ['rgba(54, 162, 235, 2.5)', 'rgba(255, 99, 132, 2.5)'],
                    borderColor: ['rgba(54, 162, 235, 5)', 'rgba(255, 99, 132, 5)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                    },
                    title: {
                        display: true,
                        // text: 'Total Sales and Purchases per Year',
                        font: {
                            size: 25
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                const index = context.dataIndex;
                                const label = context.chart.data.labels[index];
                                const value = context.raw;
                                const formattedValue = new Intl.NumberFormat('en-US', {
                                    minimumFractionDigits: 0,
                                    maximumFractionDigits: 0
                                }).format(value);
                                return `${label}: ${formattedValue}`;
                            }
                        }
                    }
                }
            }
        });

        // Horizontal Bar Chart (myChart4)
        const ctx4 = document.getElementById('myChart4').getContext('2d');
        new Chart(ctx4, {
            type: 'bar',
            data: {
                labels: staffLabels,
                datasets: [{
                    label: 'Total Sales by Staff',
                    data: staffDataSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(75, 192, 192, 2.5)',
                    borderColor: 'rgba(75, 192, 192, 1)'
                }]
            },
            options: {
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        // text: 'Top Employees by Sales',
                        font: {
                            size: 25
                        }
                    }
                }

            }
        });

        // Best Staff of the Month Chart (myChart5)
        const ctx5 = document.getElementById('myChart5').getContext('2d');
        new Chart(ctx5, {
            type: 'bar',
            data: {
                labels: bestStaffLabels,
                datasets: [{
                    label: 'Best Employee of the Month',
                    data: bestStaffSales,
                    borderWidth: 1,
                    backgroundColor: 'rgba(153, 102, 255, 2.5)',
                    borderColor: 'rgba(153, 102, 255, 1)'
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        // text: 'Best Staff of the Month with Total Sales',
                        font: {
                            size: 25
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                return `${context.dataset.label}: ${context.formattedValue} (${bestStaffNames[context.dataIndex]})`;
                            }
                        }
                    }
                }
            }
        });
    });
</script>
