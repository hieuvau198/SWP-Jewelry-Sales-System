@page
@model RazorTest.Pages.InvoiceCRUD.CreateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Invoice - RazorTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
            color: #b8860b; /* Set the text color */
        }

        .create-container {
            margin-top: 5rem;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 1200px; /* Increased width */
            max-width: 100%;
            margin: auto;
        }

        .card-header {
            background-color: #fff;
            border-bottom: none;
            padding: 1.5rem 1.5rem 0;
        }

            .card-header h3 {
                margin-bottom: 0;
                color: #b8860b;
                font-weight: 600;
            }

        .card-body {
            padding: 1.5rem;
        }

        .form-group label {
            font-weight: 600;
            color: #b8860b; /* Set the label text color */
        }

        .form-control {
            color: #b8860b; /* Set the input text color */
        }

        .btn-primary {
            background-color: #b8860b;
            border-color: #b8860b;
        }

            .btn-primary:hover {
                background-color: #b8860b;
                border-color: #b8860b;
            }

        .card-footer {
            background-color: #fff;
            border-top: none;
            padding: 1rem 1.5rem;
        }

            .card-footer a {
                background-color: #b8860b; /* Yellow background */
                color: #ffffff; /* White text color */
                text-decoration: none;
                padding: 10px 20px;
                border-radius: 5px;
                display: inline-block;
            }

                .card-footer a:hover {
                    background-color: #a5702b; /* Darker shade of yellow on hover */
                    color: #ffffff; /* Maintain white text color on hover */
                    text-decoration: none;
                }
    </style>
</head>

<nav class="sidebar">
    @if (Model.VerifyAuth("Manager"))
    {
        <a asp-page="/ProductCRUD/ProductDetail">Manage Products</a>
        <a asp-page="/InvoiceCRUD/InvoiceDetail">Order History</a>
        <a asp-page="/GemCRUD/GemDetail">Manage Gems</a>
        <a asp-page="/UserCRUD/UserDetail">Manage Staffs</a>
        <a asp-page="/ProductCRUD/ProductDetail">Manage Stalls</a>
    }

    @if (Model.VerifyAuth("Admin"))
    {
        <a href="/Dashboard/Revenue">Dashboard</a>
        <a asp-page="/ProductCRUD/ProductDetail">Products</a>
        <a asp-page="/CustomerCRUD/CustomerDetail">Customers</a>
        <a asp-page="/DiscountCRUD/DiscountDetail">Discounts</a>
        <a asp-page="/UserCRUD/UserDetail">Employees</a>
        <a asp-page="/InvoiceCRUD/InvoiceDetail">Order History</a>
    }

    @if (Model.VerifyAuth("Cashier"))
    {
        <a asp-page="/ProductCRUD/ProductDetail">Products</a>
        <a asp-page="/InvoiceCRUD/InvoiceDetail">Order History</a>

    }

    @if (Model.VerifyAuth("Sale"))
    {
        <a asp-page="/ProductCRUD/ProductDetail">Products</a>
        <a asp-page="/Sale/SaleHomePage">Order</a>
        <a asp-page="/Buy/Processing">Buy-Back</a>
        <a asp-page="/InvoiceCRUD/InvoiceDetail">Order History</a>
    }
</nav>

<body>
    <div class="container create-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center">
                        <h3 class="mb-0">Create Invoice</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="Invoice.InvoiceId" />

                            <div class="form-group">
                                <label for="invoiceType">Invoice Type</label>
                                <input asp-for="Invoice.InvoiceType" class="form-control" id="invoiceType" required>
                                <span asp-validation-for="Invoice.InvoiceType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="customerId">Customer ID</label>
                                <input asp-for="Invoice.CustomerId" class="form-control" id="customerId">
                                <span asp-validation-for="Invoice.CustomerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="userId">User ID</label>
                                <input asp-for="Invoice.UserId" class="form-control" id="userId">
                                <span asp-validation-for="Invoice.UserId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="invoiceDate">Invoice Date</label>
                                <input asp-for="Invoice.InvoiceDate" class="form-control" id="invoiceDate">
                                <span asp-validation-for="Invoice.InvoiceDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="customerVoucher">Customer Voucher</label>
                                <input asp-for="Invoice.CustomerVoucher" class="form-control" id="customerVoucher">
                                <span asp-validation-for="Invoice.CustomerVoucher" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="totalPrice">Total Price</label>
                                <input asp-for="Invoice.TotalPrice" class="form-control" id="totalPrice">
                                <span asp-validation-for="Invoice.TotalPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="endTotalPrice">End Total Price</label>
                                <input asp-for="Invoice.EndTotalPrice" class="form-control" id="endTotalPrice">
                                <span asp-validation-for="Invoice.EndTotalPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="invoiceStatus">Invoice Status</label>
                                <input asp-for="Invoice.InvoiceStatus" class="form-control" id="invoiceStatus">
                                <span asp-validation-for="Invoice.InvoiceStatus" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Create</button>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-page="./InvoiceDetail" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
