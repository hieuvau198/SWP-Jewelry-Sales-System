@page "{currentPage:int?}"
@using RazorTest.Models
@model RazorTest.Pages.Sale.SaleHomePageModel
@{
}

@{
    var typeOptions = new List<string> { "All", "Ring", "Necklace", "Bracelet", "Earrings" };
    var gemOptions = new List<string> { "All", "Ruby", "Sapphire", "Emerald", "Cabochon", "Diamond" };
    var goldOptions = new List<string> { "All", "24K", "18K", "14K", "10K" };
}

<!DOCTYPE html>
<html lang="en">
<!-- partial: Shared/_Head.cshtml -->
@await Html.PartialAsync("Shared/_Head")
<!-- partial -->

<body>
    <div class="container-scroller">
        <!-- partial: Shared/_Sidebar.cshtml -->
        @await Html.PartialAsync("Shared/_Sidebar")
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial: Shared/_Navbar.cshtml -->
            @await Html.PartialAsync("Shared/_Navbar")
            <!-- partial -->
            <div class="main-panel">
                <!-- content-wrapper begins -->
                <div class="content-wrapper">
                    <div class="card">
                        <div class="card-body" style="position: relative;">
                            <!-- EDIT HERE ONLY -->
                            <!-- Search and Filter -->
                            <form method="get">
                                <div style="text-align: center; margin-bottom: 20px;">
                                    <input type="text" name="searchTerm" placeholder="Search" value="@Model.SearchTerm" style="padding: 5px; width: 200px;" />
                                    
                                    <label>Type</label>
                                    <select name="filterType">
                                        @foreach (var option in typeOptions)
                                        {
                                            if (option.Equals(Model.FilterType))
                                            {
                                                <option value="@option" selected>@option</option>
                                            }
                                            else
                                            {
                                                <option value="@option">@option</option>
                                            }

                                        }
                                    </select>

                                    <label>Gemstone</label>
                                    <select name="filterGem">
                                        @foreach (var option in gemOptions)
                                        {
                                            if (option.Equals(Model.FilterGem))
                                            {
                                                <option value="@option" selected>@option</option>
                                            }
                                            else
                                            {
                                                <option value="@option">@option</option>
                                            }

                                        }
                                    </select>

                                    <label>Gold</label>
                                    <select name="filterGold">
                                        @foreach (var option in goldOptions)
                                        {
                                            if (option.Equals(Model.FilterGold))
                                            {
                                                <option value="@option" selected>@option</option>
                                            }
                                            else
                                            {
                                                <option value="@option">@option</option>
                                            }

                                        }
                                    </select>
                                    <button type="submit">Search</button>
                                </div>
                            </form>
                            <!-- Search and Filter Ends-->
                            <!-- Scan Barcode-->
                            <div style="text-align: center;">
                                <button onclick="startBarcodeScanner()">Scan</button>
                                <div id="videoContainer" style="display:none;position: absolute;">
                                    <video id="video" style="width: 35%; height: 35%;" controls></video>
                                </div>
                                <a asp-page="/Sale/SaleHomePage">Cancel Scan</a>
                            </div>
                            
                            <!-- Scan Barcode Ends-->

                            <div class="table-responsive">
                                <table class="table table-hover text-center">
                                    <thead>
                                        <tr>
                                            <th>Portrait</th>
                                            <th class="text-left">Name</th>
                                            <th>Price (VND)</th>
                                            <th>View</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Product product in Model.Products)
                                        {
                                            <tr>
                                                <td><img src="/ProductImages/@product.ProductImages" width="100px" /></td>
                                                <td class="text-left">@product.ProductName</td>
                                                <td>@String.Format("{0:N0}", product.UnitPrice)</td>
                                                <td>
                                                    <form method="post" asp-page-handler="ViewDetail">
                                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                                        <button class="btn btn-outline-warning btn-fw" type="submit">Detail</button>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" asp-page-handler="AddToCart" class="add-to-cart-form">
                                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                                        <input type="hidden" name="currentPage" value="@Model.CurrentPage" />
                                                        <input type="submit" value="Add to Cart" class="btn btn-success btn-fw" />
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- EDIT HERE END -->
                            <div class="card-body text-center">
                                @if (Model.CurrentPage > 1)
                                {
                                    <a class="btn btn-primary btn-fw" asp-page="./SaleHomePage" asp-route-currentPage="@(Model.CurrentPage - 1)">&laquo; Prev</a>
                                }
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    if (i == Model.CurrentPage)
                                    {
                                        <a class="btn btn-primary" class="active" href="#">@i</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-primary" asp-page="./SaleHomePage" asp-route-currentPage="@i">@i</a>
                                    }
                                }
                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <a class="btn btn-primary btn-fw" asp-page="./SaleHomePage" asp-route-currentPage="@(Model.CurrentPage + 1)">Next &raquo;</a>
                                }
                            </div>

                            <div class="card-body text-center">
                                <a asp-page="./ViewCart" class="btn btn-light btn-fw">Go to Cart</a>
                                <a href="javascript:history.back()" class="btn btn-secondary btn-fw">Back</a>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial: Shared/_Footer.cshtml -->
                @await Html.PartialAsync("Shared/_Footer")
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- partial: Shared/_Source.cshtml -->
    @await Html.PartialAsync("Shared/_Source")
    <!-- partial -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>
    <script>
        function startBarcodeScanner() {
            navigator.mediaDevices.getUserMedia({ video: true })
                .then(function (stream) {
                    var videoElement = document.getElementById('video');
                    videoContainer.style.display = 'block';
                    videoElement.srcObject = stream;
                    videoElement.play();

                    Quagga.init({
                        inputStream: {
                            name: "Live",
                            type: "LiveStream",
                            target: videoElement,
                            constraints: {
                                
                                facingMode: "environment"
                            }
                        },
                        decoder: {
                            readers: ["code_128_reader", "ean_reader", "ean_8_reader", "code_39_reader"]
                        }
                    }, function (err) {
                        if (err) {
                            return;
                        }
                        Quagga.start();
                    });

                    Quagga.onDetected(function (data) {
                        // Set the searchTerm value (modify as needed)
                        var searchTerm = data.codeResult.code;

                        Quagga.stop();
                        stream.getTracks().forEach(track => track.stop());

                        window.location.href = '/Sale/SaleHomePage?handler=OnGetAsync&searchTerm=' + encodeURIComponent(searchTerm);
                    });
                })
                .catch(function (error) {
                    alert('Please allow camera access to use the barcode scanner.');
                });
        }
        
    </script>
    
</body>
</html>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-cart-form').on('submit', function (event) {
                event.preventDefault();
                var $form = $(this);
                var productId = $form.find('input[name="productId"]').val();
                var currentPage = $form.find('input[name="currentPage"]').val();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Page("SaleHomePage", "AddToCart")',
                    data: $form.serialize(),
                    success: function (response) {
                        // Optionally update the UI or show a message that the product was added to the cart
                        alert('Product added to cart!');
                    },
                    error: function () {
                        alert('Failed to add product to cart.');
                    }
                });
            });
        });
    </script>
}