@page "{currentPage:int?}"
@using RazorTest.Models
@model RazorTest.Pages.Sale.SaleHomePageModel
@{
}

<!DOCTYPE html>
<html lang="en">
<!-- partial: Shared/_Head.cshtml -->
@await Html.PartialAsync("Shared/_Head")
<!-- partial -->
<body>
    <div class="container-scroller">
        <!-- partial: Shared/_Sidebar.cshtml -->
        @await Html.PartialAsync("Shared/_Sidebar")
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial: Shared/_Navbar.cshtml -->
            @await Html.PartialAsync("Shared/_Navbar")
            <!-- partial -->
            <div class="main-panel">
                <!-- content-wrapper begins -->
                <div class="content-wrapper">
                    <div class="card">
                        <div class="card-body">
                            <!-- EDIT HERE ONLY -->
                            <div class="table-responsive">
                                <table class="table table-hover text-center">
                                    <thead>
                                        <tr>
                                            <th>Portrait</th>
                                            <th class="text-left">Name</th>
                                            <th>Price (VND)</th>
                                            <th>View</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Product product in Model.Products)
                                        {
                                            <tr>
                                                <td><img src="/ProductImages/@product.ProductImages" width="100px" /></td>
                                                <td class="text-left">@product.ProductName</td>
                                                <td>@String.Format("{0:N0}", product.UnitPrice)</td>
                                                <td>
                                                    <form method="post" asp-page-handler="ViewDetail">
                                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                                        <button class="btn btn-outline-warning btn-fw" type="submit">Detail</button>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" asp-page-handler="AddToCart" class="add-to-cart-form">
                                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                                        <input type="hidden" name="currentPage" value="@Model.CurrentPage" />
                                                        <input type="submit" value="Add to Cart" class="btn btn-success btn-fw" />
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- EDIT HERE END -->
                            <div class="card-body text-center">
                                @if (Model.CurrentPage > 1)
                                {
                                    <a class="btn btn-primary btn-fw" asp-page="./SaleHomePage" asp-route-currentPage="@(Model.CurrentPage - 1)">&laquo; Prev</a>
                                }
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    if (i == Model.CurrentPage)
                                    {
                                        <a class="btn btn-primary" class="active" href="#">@i</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-primary" asp-page="./SaleHomePage" asp-route-currentPage="@i">@i</a>
                                    }
                                }
                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <a class="btn btn-primary btn-fw" asp-page="./SaleHomePage" asp-route-currentPage="@(Model.CurrentPage + 1)">Next &raquo;</a>
                                }
                            </div>

                            <div class="card-body text-center">
                                <a asp-page="./ViewCart" class="btn btn-light btn-fw">Go to Cart</a>
                                <a href="javascript:history.back()" class="btn btn-secondary btn-fw">Back</a>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial: Shared/_Footer.cshtml -->
                @await Html.PartialAsync("Shared/_Footer")
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- partial: Shared/_Source.cshtml -->
    @await Html.PartialAsync("Shared/_Source")
    <!-- partial -->
</body>
</html>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-cart-form').on('submit', function (event) {
                event.preventDefault();
                var $form = $(this);
                var productId = $form.find('input[name="productId"]').val();
                var currentPage = $form.find('input[name="currentPage"]').val();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Page("SaleHomePage", "AddToCart")',
                    data: $form.serialize(),
                    success: function (response) {
                        // Optionally update the UI or show a message that the product was added to the cart
                        alert('Product added to cart!');
                    },
                    error: function () {
                        alert('Failed to add product to cart.');
                    }
                });
            });
        });
    </script>
}