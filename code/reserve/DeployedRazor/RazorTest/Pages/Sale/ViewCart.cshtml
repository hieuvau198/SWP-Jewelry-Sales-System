                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span></span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> HVJ - For Elegance & Dignity</span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
