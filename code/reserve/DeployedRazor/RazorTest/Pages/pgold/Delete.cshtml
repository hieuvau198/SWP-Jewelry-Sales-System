@page
@model RazorTest.Pages.pgold.DeleteModel

<h1>Delete Gold</h1>

<h3>Are you sure you want to delete this Gold?</h3>
<div>
    <h4>Gold</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Gold Id
        </dt>
        <dd class="col-sm-10">
            @Model.Gold.GoldId
        </dd>
        <dt class="col-sm-2">
            Gold Name
        </dt>
        <dd class="col-sm-10">
            @Model.Gold.GoldName
        </dd>
        <dt class="col-sm-2">
            Gold Price
        </dt>
        <dd class="col-sm-10">
            @Model.Gold.SellPrice
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Gold.GoldId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./GoldDetail" class="btn btn-secondary">Cancel</a>
    </form>
</div>
